
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

<div class="panel panel-default">
    <div class="panel-heading">
        <section class="content-header">
            <h6 class="panel-title">All Company</h6>
            <ol class="breadcrumb">
                <li class="active"><a href="/Company/Index"><i class="fa fa-dashboard"></i> All Company</a></li>
            </ol>
        </section>
    </div>

    <div class="panel-body">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Filter by country:</h4>
            </div>
            <div class="panel-body">
                <div class="form-group col-sm-12">
                    <div class="col-md-10" style="padding-left: 0px;">
                        @Html.DropDownList("Country", null, "Select Country", new { @class = "form-control input-sm col-sm-11", @placeholder = "Select Country" })
                    </div>
                    <div class="col-md-2" style="padding-left: 0px;">
                        <input type="button" class="btn btn-primary btn-sm" id="btnSearch" value="Search" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-body">
        <table id="tblCompany" class="table table-bordered table-hover table-responsive table-striped" style="align-content: center; width: 100%;">
            <thead>
                <tr>
                    <th hidden="hidden"></th>
                    <th>
                        @Html.DisplayName("Logo")
                    </th>
                    <th>
                        @Html.DisplayName("Title")
                    </th>
                    <th>
                        @Html.DisplayName("Description")
                    </th>
                    <th>
                        @Html.DisplayName("Country")
                    </th>
                    <th>
                        @*@if (Project.AppUtils.HasAccessInTheList(Project.AppUtils.Create_Company))
                        {*@
                            <a href="" style="font-weight:800;color: crimson" id="createNew">Create New</a>
                        @*}*@
                    </th>
                </tr>
            </thead>
        </table>

        @*@if (Project.AppUtils.HasAccessInTheList(Project.AppUtils.Create_Company))
        {*@
            <div class="modal fade" id="mdlCompanyInsert" role="dialog" style="overflow: auto" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-lg" style="width: 55%">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" id="InsertMdlClose" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add new Company Information</h4>
                        </div>
                        <div class="modal-body panel-body">
                            @Html.Partial("Partial_InsertComapny")
                        </div>
                        <div class="modal-footer">
                            <div id="PopUp" style="float: right">
                                <input type="button" id="btnPopUpCompanyInsertClose" value="Close" class="btn btn-default btn-sm" />
                                <input type="button" id="btnInsertCompany" value="Save Company" class="btn btn-primary btn-sm" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @*}

        @if (Project.AppUtils.HasAccessInTheList(Project.AppUtils.Update_Company))
        {*@
            <div class="modal fade" id="mdlCompanyUpdate" role="dialog" style="overflow: auto" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-lg" style="width: 55%">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Update Company Information</h4>
                        </div>
                        <div class="modal-body panel-body">
                            @Html.Partial("Partial_UpdateCompany")
                        </div>
                        <div class="modal-footer">
                            <div id="PopUp" style="float: right">
                                <input type="button" id="btnPopUpCompanyClose" value="Close" class="btn btn-default btn-sm" />
                                <input type="button" id="btnUpdateCompany" value="Update Company" class="btn btn-primary btn-sm" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @*}

        @if (Project.AppUtils.HasAccessInTheList(Project.AppUtils.Delete_Company))
        {*@
            <div class="modal fade" id="mdlCompanyDelete" role="dialog" style="overflow: auto" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-lg" style="width: 45%">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Delete Company Information</h4>
                        </div>
                        <div class="modal-body panel-body">
                            Are you sure to delete this company and its information?
                            No data can be recover in future.
                        </div>
                        <div class="modal-footer">
                            <div id="PopUp" style="float: right">
                                <input type="button" id="btnPopUpCompanyDeleteClose" value="Close" class="btn btn-default btn-sm" />
                                <input type="button" id="btnDeleteCompany" value="Delete Company" class="btn btn-primary btn-sm" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @*}

        @if (Project.AppUtils.HasAccessInTheList(Project.AppUtils.View_CompanyVsStaff))
        {*@
            <div class="modal fade" id="mdlCompanyVsStaff" role="dialog" style="overflow: auto" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-lg" style="width: 75%">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" id="mdlstaffClose" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Staff list for this company</h4>
                        </div>
                        <div class="modal-body panel-body">
                            @Html.Partial("Partial_StaffForSpecificCompany")
                        </div>
                        <div class="modal-footer">
                            <div id="PopUp" style="float: right">
                                <input type="button" id="btnStaffmdlClose" value="Close" class="btn btn-default btn-sm" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @*}

        @if (Project.AppUtils.HasAccessInTheList(Project.AppUtils.Create_CompanyVsSatff))
        {*@
            <div class="modal fade" id="mdlCompanyStaffInsert" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-lg" style="width: 65%">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" id="mdlStaffAddClose" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add Staff for This Company</h4>
                        </div>
                        <div class="modal-body panel-body">
                            @Html.Partial("Partial_InsertCompanyStaff")
                        </div>
                        <div class="modal-footer">
                            <div id="PopUp" style="float: right">
                                <input type="button" id="btnAddStaffClose" value="Close" class="btn btn-default btn-sm" />
                                <input type="button" id="btnAddStaffConfirm" value="Save Staff" class="btn btn-primary btn-sm" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @*}

        @if (Project.AppUtils.HasAccessInTheList(Project.AppUtils.Delete_CompanyVsStaff))
        {*@
            <div class="modal fade" id="mdlCompanyStaffDelete" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-lg" style="width: 45%">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" id="mdlStaffDeleteClose" class="close">&times;</button>
                            <h4 class="modal-title">Delete Company Staff :</h4>
                        </div>
                        <div class="modal-body panel-body">
                            Are you sure to delete this staff ?
                            No data can be recover !
                        </div>
                        <div class="modal-footer">
                            <div id="PopUp" style="float: right">
                                <input type="button" id="btnDeleteStaffClose" value="Close" class="btn btn-default btn-sm" />
                                <input type="button" id="btnDeleteStaffConfirm" value="Save Staff" class="btn btn-primary btn-sm" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @*}

        @if (Project.AppUtils.HasAccessInTheList(Project.AppUtils.Update_CompanyVsStaff))
        {*@
            <div class="modal fade" id="mdlCompanyStaffUpdate" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-lg" style="width: 65%">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" id="mdlStaffUpdateClose" class="close">&times;</button>
                            <h4 class="modal-title">Update Company Staff:</h4>
                        </div>
                        <div class="modal-body panel-body">
                            @Html.Partial("Partial_UpdateCompanyStaff")
                        </div>
                        <div class="modal-footer">
                            <div id="PopUp" style="float: right">
                                <input type="button" id="btnUpdateStaffClose" value="Close" class="btn btn-default btn-sm" />
                                <input type="button" id="btnUpdateStaffConfirm" value="Save Staff" class="btn btn-primary btn-sm" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @*}*@
    </div>
</div>

<script src="~/Scripts/CustomScripts/CompanyManager.js"></script>
<script src="~/Scripts/CustomScripts/CompanyVsStaffManager.js"></script>
<script>
    var _CompanyID;
    var _CompanyVsStaffID;
    var tblStaff;
    var table;
    var StatusIsActive = 1;
    $(document).ready(function () {
        table = $("#tblCompany").DataTable
            ({
                "language":
                {
                    "processing": "<div class='overlay custom-loader-background'><i class='fa fa-cog fa-spin custom-loader-color'></i></div>"
                },
                "processing": true,
                "serverSide": true,

                "ajax":
                {
                    "url": "/Company/GetAllCompanyAJAXData",
                    "type": "POST",
                    "dataType": "JSON",
                    data: function (d) {
                        d.CountryID = $("#CountryID").val();
                        d.__RequestVerificationToken = $('[name=__RequestVerificationToken]').val();
                    }
                },
                "columnDefs": [
                    { "targets": [0], "width": "5%" },
                    { "targets": [0], "data": "CompanyID", "render": function (data, type, row, meta) { return "<td hidden><input type='hidden' id='CompanyID' name='CompanyID' value=" + row.CompanyID + "></td>" } },
                    { "targets": [1], "width": "8%", "style": "align='center'", "orderable": false, "data": "Action", "render": function (data, type, row, meta) { return '<img src=' + row.CompanyLogo + '  height="50" width="50"/>' } },
                    { "targets": [4], "width": "14%", "style": "align='center'", "orderable": false, "data": "Action", "render": function (data, type, row, meta) { return row.CountryName } },
                    { "targets": [5], "width": "14%", "style": "align='center'", "orderable": false, "data": "Action", "render": function (data, type, row, meta) { return /*row.UpdateCompany === true ?*/ '<a href="#" id="showCompanyForUpdate" class="glyphicon glyphicon-edit btn-circle btn-default"></a><a href="" id="showCompanyForDelete" class="glyphicon glyphicon-remove btn-circle btn-default"></a><a href="" id="showCompanyStaffForCreate" class="glyphicon glyphicon-user btn-circle btn-default"></a><a href="" id="showCompanyStaff" class="glyphicon glyphicon-edit btn-circle btn-default"></a>'/* : ""*/ } }
                ],
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    $(nRow).find("td:eq(0)").attr("hidden", true);
                    return nRow;
                },
                "columns": [
                    {
                        "data": "CompanyID"
                    },
                    {
                        "data": ""
                    },
                    {
                        "data": "CompanyName"
                    },
                    {
                        "data": "Details"
                    },
                    {
                        "data": ""
                    },
                    {
                        "data": ""
                    }
                ]
            });
        
        tblStaff = $("#tblCompanyVsStaff").DataTable
            ({
                "language":
                {
                    "processing": "<div class='overlay custom-loader-background'><i class='fa fa-cog fa-spin custom-loader-color'></i></div>"
                },
                "processing": true,
                "serverSide": true,

                "ajax":
                {
                    "url": "/Company/GetStaffListForSpecificCompanyByID",
                    "type": "POST",
                    "dataType": "JSON",
                    data: function (d) {
                        d.CompanyID = $("#CompanyIDS").val();
                        d.__RequestVerificationToken = $('[name=__RequestVerificationToken]').val();
                    }
                },
                "columnDefs": [
                    { "targets": [0], "width": "5%" },
                    { "targets": [0], "data": "CompanyVsStaffID", "render": function (data, type, row, meta) { return "<td hidden><input type='hidden' id='CompanyVsStaffID' name='CompanyVsStaffID' value=" + row.CompanyVsStaffID + "></td>" } },
                    { "targets": [1], "width": "8%", "style": "align='center'", "orderable": false, "data": "Action", "render": function (data, type, row, meta) { return '<img src=' + row.CompanyStaffImage + '  height="50" width="50"/>' } },
                    { "targets": [2], "width": "14%", "style": "align='center'", "orderable": false, "data": "Action", "render": function (data, type, row, meta) { return row.FirstName + " " + row.LastName } },
                    { "targets": [5], "width": "14%", "style": "align='center'", "orderable": false, "data": "Action", "render": function (data, type, row, meta) { return row.Status === StatusIsActive ? "Active" : "Lock" } },
                    { "targets": [6], "width": "14%", "style": "align='center'", "orderable": false, "data": "Action", "render": function (data, type, row, meta) { return row.UpdateCompanyVsStaff === true ? '<a href="#" id="showCompanyStaffForUpdate" class="glyphicon glyphicon-edit btn-circle btn-default"></a><a href="" id="showCompanyStaffForDelete" class="glyphicon glyphicon-remove btn-circle btn-default"></a>' : "" } }
                ],
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    $(nRow).find("td:eq(0)").attr("hidden", true);
                    return nRow;
                },

                "columns": [
                    {
                        "data": ""
                    },
                    {
                        "data": ""
                    },
                    {
                        "data": ""
                    },
                    {
                        "data": "Email"
                    },
                    {
                        "data": "Phone"
                    },
                    {
                        "data": ""
                    },
                    {
                        "data": ""
                    }
                ]
            });
        $("#tblCompany").on("click", "#showCompanyForUpdate", function (e) {

            e.preventDefault();
            _CompanyID = $(this).closest("tr").find("td:eq(0) input").val();

            CompanyManager.GetCompanyDetailsByID(_CompanyID);
        });

        $("#tblCompany").on("click", "#showCompanyForDelete", function (e) {

            e.preventDefault();
            _CompanyID = $(this).closest("tr").find("td:eq(0) input").val();
            $("#mdlCompanyDelete").modal("show");
        });

        $("#tblCompany").on("click", "#showCompanyStaffForCreate", function (e) {

            e.preventDefault();
            _CompanyID = $(this).closest("tr").find("td:eq(0) input").val();
            $("#mdlCompanyStaffInsert").modal("show");
        });

        $("#tblCompany").on("click", "#showCompanyStaff", function (e) {

            e.preventDefault();
            _CompanyID = $(this).closest("tr").find("td:eq(0) input").val();
            $("#CompanyIDS").val(_CompanyID);

            tblStaff.draw();

            $("#mdlCompanyVsStaff").modal("show");

            //CompanyManager.GetCompanyVsStaffByID(_CompanyID);
        });

        $("#createNew").click(function (e) {
            e.preventDefault();
            $("#mdlCompanyInsert").modal("show");
        });

        $("#btnPopUpCompanyInsertClose,#InsertMdlClose").click(function (e) {
            CompanyManager.clearForSaveCompanyInformation();
            $("#mdlCompanyInsert").modal("hide");
        });

        $("#btnInsertCompany").click(function (e) {

            if (CompanyManager.CreateValidation() === true) {
                CompanyManager.InsertCompanyFromPopUp();
            }
        });

        $("#btnUpdateCompany").click(function () {
            if (CompanyManager.UpdateValidation() === true) {
                CompanyManager.UpdateCompanyInformation(_CompanyID);
            }
        });

        $("#btnPopUpCompanyClose").click(function () {
            CompanyManager.clearForUpdateCompanyInformation();
            $("#mdlCompanyUpdate").modal("hide");
        });

        $("#btnDeleteCompany").click(function () {
            CompanyManager.DeleteCompanyFromPopUp(_CompanyID);
        });

        $("#btnPopUpCompanyDeleteClose").click(function () {
            $("#mdlCompanyDelete").modal("hide");
        });

         $("#btnStaffmdlClose,#mdlstaffClose").click(function (e) {
            $("#tblCompanyVsStaff>tbody>tr").remove();
            $("#mdlCompanyVsStaff").modal("hide");
         });

        $("#btnAddStaffConfirm").click(function () {
            if (CompanyVsStaffManager.CreateValidation() === true) {
                CompanyVsStaffManager.InsertCompanyStaffFromPopUp(_CompanyID);
            }
        });

        $("#mdlStaffAddClose,#btnAddStaffClose").click(function () {
            CompanyVsStaffManager.clearForSaveCompanyVsStaffInformation();
            $("#mdlCompanyStaffInsert").modal("hide");
        });

        $("#btnSearch").click(function () {
            table.draw();
        });

        $("#tblCompanyVsStaff").on("click", "#showCompanyStaffForUpdate", function (e) {
            e.preventDefault();
            _CompanyVsStaffID = $(this).closest("tr").find("td:eq(0) input").val();
            CompanyVsStaffManager.GetCompanyVsStaffDetailsByID(_CompanyVsStaffID);
        });

        $("#tblCompanyVsStaff").on("click", "#showCompanyStaffForDelete", function (e) {

            e.preventDefault();
            _CompanyVsStaffID = $(this).closest("tr").find("td:eq(0) input").val();
            $("#mdlCompanyStaffDelete").modal("show");
        });

        $("#btnCreateNewStaffFromMdl").click(function (e) {
            e.preventDefault();
            $("#mdlCompanyStaffInsert").modal("show");
        });

        $("#btnDeleteStaffClose,#mdlStaffDeleteClose").click(function () {
            $("#mdlCompanyStaffDelete").modal("hide");
        });

        $("#btnDeleteStaffConfirm").click(function () {
            CompanyVsStaffManager.DeleteCompanyVsStaffFromPopUp(_CompanyVsStaffID);
        });

        $("#btnUpdateStaffConfirm").click(function () {
            if (CompanyVsStaffManager.UpdateValidation() === true) {
                CompanyVsStaffManager.UpdateCompanyVsStaffInformation(_CompanyVsStaffID);
            }
        });

        $("#mdlStaffUpdateClose,#btnUpdateStaffClose").click(function () {
            CompanyVsStaffManager.clearForUpdateCompanyVsStaffInformation();
            $("#mdlCompanyStaffUpdate").modal("hide");
        });

    });



</script>
