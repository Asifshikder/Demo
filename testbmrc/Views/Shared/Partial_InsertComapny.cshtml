<div class="form-group col-sm-6">
    <label>
        Company Logo
        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
    </label>
    <img id="PreviewCompanyCreateImage" src="" width="100" height="90">
    <p>
        <div class="col-sm-9" style="padding-left:0px;">
            <input accept="image/*" class="" id="CompanyCreateImage" name="CompanyCreateImage" type="file" onchange="ImageManager.preview(this,'PreviewCompanyCreateImage')">
        </div>
        <div class="col-sm-3">
            <button type="button" class="close" aria-label="Close" onclick="ImageManager.RemoveContent($('#CompanyCreateImage'),'CompanyCreateImage')">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </p>
    <span id="spnfileTxt" class="text-danger" style="display: none;"></span>
</div>

