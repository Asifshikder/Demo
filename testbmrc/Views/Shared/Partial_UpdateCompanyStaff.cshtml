<div class="form-group col-sm-6">
    <label>
        Staff Photo
        <span class="required_field col-md-0" style="padding-left:5px"> *</span>
    </label>
    <img id="PreviewStaffImageUpdate" src="" width="100" height="90">
    <p>
        <div class="col-sm-9" style="padding-left:0px;">
            <input accept="image/*" class="" id="StaffImageUpdate" name="StaffImageUpdate" type="file" onchange="ImageManager.preview(this,'PreviewStaffImageUpdate')">
            <input id="StaffImageUpdatePath" name="StaffImageUpdatePath" type="hidden">
        </div>
        <div class="col-sm-3">
            <button type="button" class="close" aria-label="Close" onclick="ImageManager.RemoveContent($('#StaffImageUpdate'),'StaffImageUpdate')">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </p>
    <span id="spnfileTxt" class="text-danger" style="display: none;"></span>
</div>
