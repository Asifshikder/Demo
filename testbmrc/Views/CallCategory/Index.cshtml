            </thead>
        </table>

        @*@if (Project.AppUtils.HasAccessInTheList(Project.AppUtils.Create_CallCategory))
        {*@
            <div class="modal fade" id="mdlCallCategoryInsert" role="dialog" style="overflow: auto" data-backdrop="static" data-keyboard="false">
